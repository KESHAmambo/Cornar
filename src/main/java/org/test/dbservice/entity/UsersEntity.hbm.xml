<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.test.dbservice.entity.UsersEntity" table="users" schema="project_cornar" catalog="cornar">
        <id name="userId">
            <column name="user_id" sql-type="integer"/>
        </id>
        <property name="firstName">
            <column name="first_name" sql-type="varchar" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar" not-null="true"/>
        </property>
        <property name="birth">
            <column name="birth_date" sql-type="date" not-null="true"/>
        </property>
        <property name="personDescription">
            <column name="person_description" sql-type="text" not-null="true"/>
        </property>
        <property name="personRating">
            <column name="person_rating" sql-type="integer" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>